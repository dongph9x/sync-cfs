---
import Layout from "../layouts/Layout.astro";
import SearchBox from "../components/SearchBox.astro";

const seo = {
    title: "Search Forum - Discord Community",
    description:
        "Search through our Discord forum archive. Find discussions, solutions, and community insights across all threads and posts.",
    keywords: ["search", "forum", "discord", "community", "archive"],
    canonical: `${Astro.site}search/`,
};
---

<Layout seo={seo}>
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Page Header -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-stack-gray-900 mb-4">
                Search Forum
            </h1>
            <p class="text-lg text-stack-gray-600 mb-8">
                Find discussions, answers, and community insights across all our
                forum content.
            </p>
        </div>

        <!-- Search Interface -->
        <div class="mb-8">
            <SearchBox class="max-w-2xl mx-auto" />
        </div>

        <!-- Help Section -->
        <div class="text-center text-sm text-stack-gray-500 mt-12">
            <h3 class="font-medium text-stack-gray-700 mb-3">Search Tips</h3>
            <div
                class="grid grid-cols-1 md:grid-cols-2 gap-4 max-w-2xl mx-auto"
            >
                <div class="text-left">
                    <p class="mb-2">
                        <strong>Use quotes</strong> for exact phrases:
                    </p>
                    <code class="bg-gray-100 px-2 py-1 rounded"
                        >"getting started"</code
                    >
                </div>
                <div class="text-left">
                    <p class="mb-2"><strong>Use - to exclude</strong> terms:</p>
                    <code class="bg-gray-100 px-2 py-1 rounded"
                        >tutorial -advanced</code
                    >
                </div>
                <div class="text-left">
                    <p class="mb-2"><strong>Search by author:</strong></p>
                    <code class="bg-gray-100 px-2 py-1 rounded"
                        >author:username</code
                    >
                </div>
                <div class="text-left">
                    <p class="mb-2"><strong>Wildcards</strong> with *:</p>
                    <code class="bg-gray-100 px-2 py-1 rounded">config*</code>
                </div>
            </div>
        </div>

        <!-- Browse Alternative -->
        <div
            class="mt-16 text-center bg-gradient-to-r from-stack-blue to-indigo-600 text-white rounded-xl p-8"
        >
            <h3 class="text-2xl font-bold mb-4">
                Can't find what you're looking for?
            </h3>
            <p class="text-lg mb-6 opacity-90">
                Browse our forum categories or join our Discord for live help.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a
                    href="/forum/"
                    class="inline-flex items-center px-6 py-3 bg-white text-stack-blue font-semibold rounded-lg hover:bg-gray-100 transition-colors"
                >
                    <svg
                        class="w-5 h-5 mr-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                        ></path>
                    </svg>
                    Browse Forum
                </a>
                <a
                    href={import.meta.env.DISCORD_INVITE_URL ||
                        "https://discord.gg/your-invite-code"}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center px-6 py-3 bg-white bg-opacity-20 text-white font-semibold rounded-lg hover:bg-opacity-30 transition-colors"
                >
                    <svg
                        class="w-5 h-5 mr-2"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028c.462-.63.874-1.295 1.226-1.994a.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"
                        ></path>
                    </svg>
                    Join Discord
                </a>
            </div>
        </div>
    </div>
</Layout>
