---
import Layout from '../../layouts/Layout.astro';
import { requireRole } from '../../lib/session';
import { createPool } from '../../lib/db';
import { smartSync, updateRanksAfterSync } from '../../lib/smartSync';

// Require admin role
await requireRole(Astro, ['admin']);

// Initialize database
createPool({
  host: import.meta.env.MYSQL_HOST || 'localhost',
  port: parseInt(import.meta.env.MYSQL_PORT || '3306'),
  user: import.meta.env.MYSQL_USER || 'root',
  password: import.meta.env.MYSQL_PASSWORD || '',
  database: import.meta.env.MYSQL_DATABASE || 'forum',
});

let syncResult = null;
let error = null;

// Handle form submission
if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const action = formData.get('action') as string;
    
    if (action === 'sync') {
      // Normal sync
      syncResult = await smartSync(null, { forceFull: false });
      await updateRanksAfterSync();
    } else if (action === 'force-full-sync') {
      // Force full sync
      syncResult = await smartSync(null, { forceFull: true });
      await updateRanksAfterSync();
    }
  } catch (err) {
    console.error('Sync error:', err);
    error = err instanceof Error ? err.message : 'Unknown error occurred';
  }
}
---

<Layout seo={{ title: 'Admin - Sync Data', description: 'Sync data from Discord' }}>
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-4">Sync Data</h1>
        <p class="text-gray-600">Đồng bộ dữ liệu từ Discord server</p>
      </div>

      {error && (
        <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">Sync Failed</h3>
              <div class="mt-2 text-sm text-red-700">
                <p>{error}</p>
              </div>
            </div>
          </div>
        </div>
      )}

      {syncResult && (
        <div class="bg-green-50 border border-green-200 rounded-md p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-green-800">Sync Completed</h3>
              <div class="mt-2 text-sm text-green-700">
                <p>Data synchronized successfully!</p>
                {syncResult && typeof syncResult === 'object' && (
                  <div class="mt-2">
                    <p><strong>Channels:</strong> {(syncResult as any).channelsAdded || 0} added, {(syncResult as any).channelsUpdated || 0} updated</p>
                    <p><strong>Threads:</strong> {(syncResult as any).threadsAdded || 0} added, {(syncResult as any).threadsUpdated || 0} updated</p>
                    <p><strong>Posts:</strong> {(syncResult as any).postsAdded || 0} added, {(syncResult as any).postsUpdated || 0} updated</p>
                  </div>
                )}
              </div>
            </div>
          </div>
        </div>
      )}

      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-medium text-gray-900">Sync Options</h2>
        </div>
        <div class="p-6 space-y-6">
          <div class="border border-gray-200 rounded-lg p-4">
            <h3 class="text-md font-medium text-gray-900 mb-2">Normal Sync</h3>
            <p class="text-sm text-gray-600 mb-4">
              Sync only new or updated data since the last sync. This is faster and uses less resources.
            </p>
            <form method="POST" class="inline">
              <input type="hidden" name="action" value="sync" />
              <button
                type="submit"
                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
              >
                <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
                Sync Data
              </button>
            </form>
          </div>

          <div class="border border-gray-200 rounded-lg p-4">
            <h3 class="text-md font-medium text-gray-900 mb-2">Force Full Sync</h3>
            <p class="text-sm text-gray-600 mb-4">
              Sync all data from Discord, overwriting existing data. Use this if you suspect data corruption or want to ensure complete synchronization.
            </p>
            <form method="POST" class="inline">
              <input type="hidden" name="action" value="force-full-sync" />
              <button
                type="submit"
                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500"
              >
                <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
                Force Full Sync
              </button>
            </form>
          </div>
        </div>
      </div>

      <div class="mt-6">
        <a
          href="/dashboard"
          class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
        >
          <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Dashboard
        </a>
      </div>
    </div>
  </div>
</Layout>
