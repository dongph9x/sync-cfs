---
import Layout from "../layouts/Layout.astro";
import { createPool, getAllChannels, type Channel } from "../lib/db";

// Initialize database connection
const dbConfig = {
    host: import.meta.env.MYSQL_HOST || "localhost",
    port: parseInt(import.meta.env.MYSQL_PORT || "3306"),
    user: import.meta.env.MYSQL_USER || "root",
    password: import.meta.env.MYSQL_PASSWORD || "password",
    database: import.meta.env.MYSQL_DATABASE || "forum",
};

createPool(dbConfig);

// Fetch channels data
let channels: Channel[] = [];
try {
    channels = await getAllChannels();
} catch (error) {
    console.error("Failed to fetch channels:", error);
}

const seo = {
    title: "Discord Forum - Community Discussions",
    description:
        "Browse community discussions archived from our Discord server. Join the conversation on topics ranging from general chat to technical discussions.",
    keywords: ["discord", "forum", "community", "discussions"],
};
---

<Layout seo={seo}>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <!-- Hero Section -->
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-stack-gray-900 mb-4">
                Welcome to Our Community Forum
            </h1>
            <p class="text-xl text-stack-gray-600 max-w-3xl mx-auto">
                Browse archived discussions from our Discord server. Join
                thousands of community members sharing knowledge, asking
                questions, and building together.
            </p>
        </div>

        <!-- Quick Stats -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
            <div class="card text-center">
                <div class="card-body">
                    <div class="stats-number text-3xl text-stack-blue">
                        {channels.length}
                    </div>
                    <div class="stats-label text-lg">Active Channels</div>
                </div>
            </div>

            <div class="card text-center">
                <div class="card-body">
                    <div class="stats-number text-3xl text-stack-blue">
                        {
                            channels.reduce(
                                (total, channel) =>
                                    total + (channel.thread_count || 0),
                                0,
                            )
                        }
                    </div>
                    <div class="stats-label text-lg">Total Threads</div>
                </div>
            </div>

            <div class="card text-center">
                <div class="card-body">
                    <div class="stats-number text-3xl text-stack-blue">
                        Active
                    </div>
                    <div class="stats-label text-lg">Community</div>
                </div>
            </div>
        </div>

        <!-- Featured Channels -->
        <section class="mb-12">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-bold text-stack-gray-900">
                    Browse Channels
                </h2>
                <a href="/forum/" class="btn-primary"> View All Channels </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {
                    channels.slice(0, 6).map((channel) => (
                        <div class="card hover:shadow-md transition-shadow">
                            <div class="card-body">
                                <h3 class="text-lg font-semibold mb-2">
                                    <a
                                        href={`/forum/${channel.slug}/`}
                                        class="hover:text-stack-blue transition-colors"
                                    >
                                        {channel.name}
                                    </a>
                                </h3>

                                {channel.description && (
                                    <p class="text-stack-gray-600 text-sm mb-4 line-clamp-3">
                                        {channel.description}
                                    </p>
                                )}

                                <div class="flex items-center justify-between text-sm text-stack-gray-500">
                                    <span>
                                        {channel.thread_count || 0} threads
                                    </span>
                                    <time
                                        datetime={channel.created_at.toISOString()}
                                    >
                                        Created{" "}
                                        {new Intl.DateTimeFormat("en-US", {
                                            year: "numeric",
                                            month: "short",
                                        }).format(channel.created_at)}
                                    </time>
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </section>

        <!-- Call to Action -->
        <section
            class="text-center bg-gradient-to-r from-stack-blue to-indigo-600 text-white rounded-xl p-8"
        >
            <h2 class="text-3xl font-bold mb-4">Join the Live Discussion</h2>
            <p class="text-xl mb-6 opacity-90">
                This forum shows archived conversations. Join our Discord server
                for real-time chat!
            </p>
            <a
                href={import.meta.env.DISCORD_INVITE_URL ||
                    "https://discord.gg/your-invite-code"}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-6 py-3 bg-white text-stack-blue font-semibold rounded-lg hover:bg-gray-100 transition-colors"
            >
                <svg
                    class="w-5 h-5 mr-2"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028c.462-.63.874-1.295 1.226-1.994a.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"
                    ></path>
                </svg>
                Join Discord Server
            </a>
        </section>
    </div>
</Layout>
