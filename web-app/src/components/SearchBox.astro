---
interface Props {
    placeholder?: string;
    class?: string;
}

const { placeholder = "Tìm kiếm diễn đàn...", class: className } = Astro.props;
---

<div id="search" class={className}></div>

<script>
    import { PagefindUI } from "@pagefind/default-ui";

    new PagefindUI({
        element: "#search",
        showSubResults: true,
        showImages: false,
        excerptLength: 15,
        resetStyles: false,
        placeholder: "Tìm kiếm chủ đề và bài viết diễn đàn...",
        bundlePath: "/pagefind/",
    });
</script>

<style>
    #search {
        width: 100%;
    }

    /* Form wrapper */
    :global(.pagefind-ui__form) {
        margin-bottom: 1rem;
    }

    /* Search input */
    :global(.pagefind-ui__search-input) {
        width: 100%;
        border: 1px solid #d1d5db;
        border-radius: 9999px;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        background-color: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(6px);
        transition: all 0.2s ease-in-out;
    }

    :global(.pagefind-ui__search-input:focus) {
        outline: none;
        border-color: transparent;
        box-shadow: 0 0 0 2px #3b82f6;
    }

    /* Results container */
    :global(.pagefind-ui__results) {
        margin-top: 1rem;
    }

    /* Result card */
    :global(.pagefind-ui__result) {
        background: white;
        border: 1px solid #e5e7eb;
        border-radius: 0.5rem;
        padding: 1.5rem;
        transition: box-shadow 0.2s;
    }

    :global(.pagefind-ui__result:hover) {
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

    /* Title */
    :global(.pagefind-ui__result-title a) {
        font-size: 1.125rem;
        font-weight: 600;
        text-decoration: none;
        color: #111827;
    }

    :global(.pagefind-ui__result-title a:hover) {
        color: #2563eb;
    }

    /* Excerpt */
    :global(.pagefind-ui__result-excerpt) {
        color: #374151;
        margin-top: 0.5rem;
        line-height: 1.6;
    }

    /* Highlight */
    :global(mark) {
        background: #fef08a;
        padding: 0 2px;
        border-radius: 0.25rem;
    }
    :global(.pagefind-ui__search-clear) {
        display: none !important;
    }
</style>
